<link rel="stylesheet" href="/assets/css/comment.css">
<script src="/assets/js/comment.js"></script>



<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <img src="{{article.imgUrl}}" alt="">
      <h2>{{article.title}}</h2>
      <p>{{article.summary}}</p>
    </div>
    <div class="col-2"></div>
  </div>
  <div class="row">
    <div class="col-2 empty"></div>
    <div class="col-8 comments">
      {{#each article.comments}}
      <div class="row comm">
        <div class="col-12">
          <p>{{this.message}}</p>
          <button class="btn btn-danger delBtn" data-id="{{this._id}}">Delete</button>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="col-2 empty"></div>
  </div>
  <div class="row">
    <div class="col-12">
      <form> 
        <div class="form-group">
          <label for="formGroupExampleInput">Message</label>
          <input autocomplete="off" type="text" class="form-control" id="commentMessage" placeholder="Message">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput">Username</label>
          <input type="text" class="form-control" id="commentUsername" placeholder="Username">
        </div>
        <button class="btn btn-success subBtn" data-which="{{article._id}}">Submit</button><br>
        <a href="/" class="btn btn-info">Back</a>
      </form>
    </div>
  </div>

</div>